{
    "swagger": "2.0",
    "info": {
        "title": "ToDo API",
        "contact": {
            "name": "Ahmed Helal",
            "url": "https://www.facebook.com/A.Helal.A.A"
        },
        "version": "1.0"
    },
    "host": "localhost:8000",
    "basePath": "",
    "schemes": [
        "http"
    ],
    "paths": {
        "/api/tasks": {
            "get": {
                "tags": [
                    "get all tasks"
                ],
                "summary": "Display a listing of the tasks.",
                "description": "Returns tasks",
                "responses": {
                    "200": {
                        "description": "ok"
                    }
                }
            },
            "post": {
                "description": "Store the task in database",
                "parameters": [
                    {
                        "name": "description",
                        "description": "Task description",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "details",
                        "description": "Task details",
                        "required": false,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "422": {
                        "description": "Missing Data"
                    }
                }
            }
        },
        "/api/tasks/{id}": {
            "get": {
                "description": "Return the task data in json",
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "422": {
                        "description": "Missing Data"
                    }
                }
            }
        }
    },
    "definitions": {
        "Error": {
            "required": [
                "code",
                "message"
            ],
            "properties": {
                "code": {
                    "description": "Class ApiController",
                    "type": "integer",
                    "format": "int32"
                },
                "message": {
                    "description": "Class ApiController",
                    "type": "string"
                }
            }
        }
    }
}